fatorial = int(input('Digite um número inteiro maior que 1 para calcular o seu fatorial: '))

if fatorial <= 1:
    print("Por favor, insira um número maior que 1.")
else:
    resultado = 1  
    for n in range(1, fatorial + 1):  
        resultado *= n  
        
    print(f"O fatorial de {fatorial} é {resultado}.")
